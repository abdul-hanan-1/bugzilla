<header class="masthead" style="padding-top: 5rem;">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">Signup</h1>
                <hr class="divider" />
            </div> 
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :name, class: "text-white font-weight-bold" %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              </div>
              <div class="field">
                <%= f.label :email, class: "text-white font-weight-bold" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :user_type, class: "text-white font-weight-bold" %><br />
                <%= f.select :user_type, options_for_select(["manager", "developer", "qa"]) %>
              </div>
              <div class="field">
                <%= f.label :password, class: "text-white font-weight-bold" %>
                <br>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation , class: "text-white font-weight-bold"%><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "Sign up",class: "btn btn-primary btn-xl" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</header>