<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Manager:</strong>
  <%= @project.manager %>
</p>
<% if current_user.manager? %>
<table>
  <thead>
    <tr>
      <th>Developers</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.users.developers.each do |developer| %>
      <tr>
        <td><%= developer.name.capitalize %></td>
        <%= form_with(url: "/projects/#{@project.id}/remove_user", method: "post", html: {style: 'text-align: center'}) do |f|%>
        <%= f.hidden_field :user_id, value: developer.id %>
        <td> <%= f.submit 'Remove'%></td>
      <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>QAs</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.users.qas.each do |qa| %>
      <tr>
        <td><%= qa.name.capitalize %></td>
        <%= form_with(url: "/projects/#{@project.id}/remove_user", method: "post", html: {style: 'text-align: center'}) do |f|%>
        <%= f.hidden_field :user_id, value: qa.id %>
        <td> <%= f.submit 'Remove'%></td>
      <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
<% elsif current_user.qa? %>
<ul>
  <% @project.users.developers.each do |developer| %>
  <li><%= developer.name.capitalize %></li>
 <% end %>
</ul>
<% @bugs.each do |bug| %>
<p>
  <strong>Title:</strong>
  <%= bug.title %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= bug.deadline %>
</p>

<p>
  <strong>Status:</strong>
  <%= bug.status %>
</p>

<p>
  <strong>Type:</strong>
  <%= bug.kind %>
</p>
<p>
  <strong>Screenshot:</strong>
  <%= image_tag bug.screenshot %>
</p>
<% end%>
<%= link_to 'Add Bug', add_bug_path(@project.id) %>
<% end%>