<header class="masthead" style="padding-bottom: 20rem; height: auto;">
    <div class="container px-4 px-lg-5 h-100" style="padding-top: 3rem;">
        <%= link_to 'Back', projects_path, class: "btn btn-primary" %>   
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h3 class="text-white font-weight-bold">Add developer in <%= @project.title %></h3>
                <hr class="divider" />
                <% if @developer.count>0 %>
                  <%= form_with(url: "/projects/#{@project.id}/update_user", method: "put") do |f|%>
                    <div class="form-group">
                      <%= f.label :name,'Add developers', class:"control-label col-xs-4" %>
                        <div class="col-xs-8">
                          <%= f.hidden_field :title , value: @project.title %>
                          <%= f.hidden_field :manager , value: @project.manager %>
                          <%= f.collection_select(:user_ids, @developer, :id, :name,
                                                  {prompt: "Select"},
                                                  { multiple: true, size: 2, class: "dropdown-select custom-select" }) %>
                        </div>
                    </div>
                  <%= f.submit 'Add to Project' , class: "btn btn-primary"%>
                  <% end %>
                <%else%>
                  <h5 class="text-white font-weight-bold">There are no developers available at the moment.</h5> 
                <%end%>   
                <h3 class="text-white font-weight-bold">Add QA in <%= @project.title %></h3>
                <hr class="divider" />
                <% if @qa.count>0 %>
                  <%= form_with(url: "/projects/#{@project.id}/update_user", method: "put") do |f|%>
                    <div class="form-group">
                      <%= f.label :name,'Add QAs', class:"control-label col-xs-4" %>
                      <div class="col-xs-8">
                        <%= f.hidden_field :title , value: @project.title %>
                        <%= f.hidden_field :manager , value: @project.manager %>
                        <%= f.collection_select(:user_ids, @qa, :id, :name,
                                                {prompt: "Select"},
                                                { multiple: true, size: 2, class: "form-select" }) %>
                      </div>
                    </div>
                    <%= f.submit 'Add to Project' , class: "btn btn-primary"%>
                  <% end %>
                <%else%>
                  <h5 class="text-white font-weight-bold">There are no QAs available at the moment.</h5> 
                <%end%>   
        </div>
    </div>
</header>  

           